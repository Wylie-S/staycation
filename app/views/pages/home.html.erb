<div class="search">
	<%= form_tag search_path, method: :get do %>
	<div class="row">
		<div class="col-md-7 banner">
			<h1>
				<span class="text-red"></span>Book A Place To Stay!</h1>
        <% if (!user_signed_in?)%>
<li><%= link_to " Login ", new_user_session_path %></li>
<li><%= link_to "Sign Up ", new_user_registration_path %></li>

<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<%= text_field_tag :search, params[:search], placeholder: "Where would you like to stay?", class: "form-control", id: "autolocation" %>
		</div>

	</div>
	<br/><br/>

	<div class="row">
		<div class="col-md-offset-4 col-md-4">
			<%= submit_tag "Search", class: "btn btn-normal btn-block" %>
		</div>
	</div>
<% end %>
<br/><hr/>
</div>


<br/>
